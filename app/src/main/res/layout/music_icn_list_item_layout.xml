<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <ImageView
        android:id="@+id/music_list_icn"
        android:layout_width="@dimen/music_icn_dimen"
        android:layout_height="@dimen/music_icn_dimen"
        android:src="@mipmap/music_icn_local"/>
    <TextView
        android:id="@+id/music_list_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="本地音乐"
        android:textColor="@android:color/black"
        android:textSize="@dimen/list_item_textsize"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/music_list_icn"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/line_bg"
        android:layout_toRightOf="@id/music_list_icn"
        android:layout_alignBottom="@id/music_list_icn"/>
</RelativeLayout>