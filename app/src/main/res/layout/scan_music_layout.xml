<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.v7.widget.Toolbar
        android:id="@+id/scan_music_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/wangyiyun_red">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/scan_music"
            android:textColor="@color/white"
            android:textSize="@dimen/toolbar_custom_textview"/>
    </android.support.v7.widget.Toolbar>
    <ImageView
        android:id="@+id/local_music_scan_mobile_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/local_scan_mobile"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/scan_music_toolbar"
        android:layout_marginTop="50dp"/>
    <Button
        android:id="@+id/local_music_scan_btn_red"
        android:layout_width="@dimen/btn_width_size"
        android:layout_height="@dimen/btn_height_size"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/local_music_scan_mobile_iv"
        android:layout_marginTop="30dp"
        android:text="@string/overall_scan"
        android:textColor="@color/white"
        android:textSize="@dimen/list_item_textsize"
        android:background="@drawable/dra_local_scan_btn_red"
        style="?android:attr/borderlessButtonStyle"/>
    <Button
        android:layout_width="@dimen/btn_width_size"
        android:layout_height="@dimen/btn_height_size"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/local_music_scan_btn_red"
        android:layout_marginTop="20dp"
        android:text="@string/custom_scan"
        android:textColor="@android:color/black"
        android:textSize="@dimen/list_item_textsize"
        android:background="@drawable/dra_local_scan_btn"
        style="?android:attr/borderlessButtonStyle"/>
</RelativeLayout>