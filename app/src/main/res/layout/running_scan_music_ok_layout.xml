<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/running_scan_scene_base">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageButton
            android:id="@+id/running_scan_back_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:src="@drawable/dra_lay_protype_btn_close"
            android:background="@null"
            android:padding="6dp"/>
    </RelativeLayout>
    <ImageView
        android:id="@+id/running_scan_mobile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/local_scan_mobile"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"/>
    <ImageView
        android:id="@+id/running_scan_ok_icn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/local_scan_ok"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="200dp"/>
    <TextView
        android:id="@+id/running_scan_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="共扫描到首歌曲"
        android:textColor="@android:color/black"
        android:layout_below="@id/running_scan_mobile"
        android:gravity="center"
        android:layout_marginTop="15dp"/>
    <Button
        android:id="@+id/running_scan_back_music_btn"
        android:layout_width="@dimen/btn_width_size"
        android:layout_height="@dimen/btn_height_size"
        android:background="@drawable/dra_local_scan_btn_red"
        style="?android:attr/borderlessButtonStyle"
        android:layout_below="@id/running_scan_tv"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:text="回到我的音乐"
        android:textSize="@dimen/list_item_textsize"
        android:textColor="@android:color/white"/>
    <Button
        android:layout_width="@dimen/btn_width_size"
        android:layout_height="@dimen/btn_height_size"
        android:background="@drawable/dra_local_scan_btn"
        style="?android:attr/borderlessButtonStyle"
        android:layout_below="@id/running_scan_back_music_btn"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:text="一键获取封面歌词"
        android:textSize="@dimen/list_item_textsize"/>
</RelativeLayout>